@model Contests.App.Areas.Admin.Models.ViewModels.AdminsAndUsersViewModel

@{
    ViewBag.Title = "User page";
}

<h1>Admin users page</h1>

<h4>Admins:</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Admins.FirstOrDefault().FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admins.FirstOrDefault().UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admins.FirstOrDefault().Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Admins)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
   
</table>

<h4>Users:</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Admins.FirstOrDefault().FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admins.FirstOrDefault().UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admins.FirstOrDefault().Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            </td>
        </tr>
    }
    </tbody>
</table>
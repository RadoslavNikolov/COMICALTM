@model IEnumerable<Contests.App.Areas.Admin.Models.ViewModels.CategoryViewModel>

@{
    ViewBag.Title = "Home Page";
}

<h1>Active categories</h1>

<h4>Тази страница е само за тестване на multiselect-a.</h4>

@using (Html.BeginForm("Index", "Home", new { area = "Admin" }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <select id='custom-headers' multiple='multiple' class="searchable" name="elements[]">
            @foreach (var category in @Model)
            {
                var selected = category.IsActive ? "selected" : "";
                <option value='@category.Id' @selected>@category.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Test" />
        </div>
    </div>
}

@Styles.Render("~/Content/multiselect")

@section scripts
{
    @Scripts.Render("~/bundles/multiselect")

    <script type="text/javascript">
        multiselect('.searchable');
    </script>
}

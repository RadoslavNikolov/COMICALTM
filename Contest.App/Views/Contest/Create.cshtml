            function fillVoters() {
                $.ajax({
                    type: "GET",
                    url: "/Users/GetAllUsers"
                })
                    .done(function (data) {
                        $('#voters').html(data);
                    });
            };

            function fillParticipators() {
                $.ajax({
                    type: "GET",
                    url: "/Users/GetAllUsers"
                })
                    .done(function (data) {
                        $('#participators').html(data);
                    });
            };

            fillVoters();
